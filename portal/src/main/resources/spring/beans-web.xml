<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<mvc:annotation-driven />
	<mvc:default-servlet-handler />
	
	<!-- Automatically redirect context root requests to the new ticket form -->
	<mvc:view-controller path="/" view-name="redirect:/tickets/new.html" />
	
	<context:component-scan base-package="com.springinpractice.ch15.portal.web" />
	
	<!-- Just create the bean here instead of having to create a new beans-service.xml configuration over it. -->
	<!-- The ticketing service URL here is an HTTP form endpoint on the message bus, which the ticketing app exposes.
	     We're not pointing directly at the tech support form processing URL. -->
	<bean id="portalService"
		class="com.springinpractice.ch15.portal.service.PortalTicketServiceImpl"
		p:ticketingServiceUrl="http://localhost:8080/ticketing/tickets" />
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		p:prefix="/WEB-INF/jsp/"
		p:suffix=".jsp" />
</beans>
